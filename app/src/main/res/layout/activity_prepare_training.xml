                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_normal"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:text="@string/_6"
                android:layout_marginEnd="@dimen/margin_small"
                android:textSize="@dimen/text_normal"/>

            <EditText
                android:id="@+id/name6"
                android:textColor="@color/white"
                android:hint="@string/rower6"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_normal"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:text="@string/_7"
                android:layout_marginEnd="@dimen/margin_small"
                android:textSize="@dimen/text_normal"/>

            <EditText
                android:id="@+id/name7"
                android:textColor="@color/white"
                android:hint="@string/rower7"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_normal"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:text="@string/stern_8"
                android:layout_marginEnd="@dimen/margin_small"
                android:textSize="@dimen/text_normal"/>

            <EditText
                android:id="@+id/name8"
                android:textColor="@color/white"
                android:hint="@string/rower8"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_normal"
                />

        </TableRow>
        <TableRow
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="textEnd"
                android:text="@string/cox_9"
                android:layout_marginEnd="@dimen/margin_small"
                android:textSize="@dimen/text_normal"/>

            <EditText
                android:id="@+id/name_timo"
                android:textColor="@color/white"
                android:hint="@string/cox"
                android:textColorHint="@color/light_gray"
                android:textSize="@dimen/text_normal"
                />

        </TableRow>

    </TableLayout>

</RelativeLayout>