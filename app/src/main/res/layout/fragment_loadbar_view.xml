        android:layout_marginEnd="@dimen/margin_normal"
        android:scaleType="centerInside"
        android:layout_alignTop="@+id/stroke_rate"
        android:layout_alignBottom="@id/stroke_rate"
        android:layout_alignStart="@id/table"/>

    <ImageView
        android:id="@+id/calibrate_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_calibrate"
        android:layout_toEndOf="@id/start_and_pause_button"
        android:scaleType="centerInside"
        android:layout_alignTop="@+id/start_and_pause_button"
        android:layout_alignBottom="@id/start_and_pause_button"/>

    <ImageView
        android:id="@+id/stop_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_action_playback_stop"
        android:scaleType="centerInside"
        android:layout_alignTop="@+id/start_and_pause_button"
        android:layout_alignBottom="@id/start_and_pause_button"
        android:layout_alignEnd="@+id/bars_container"/>

    <TextView
        android:id="@+id/stroke_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_very_big"
        android:layout_centerHorizontal="true"
        android:text="@string/strokerate_default"
        android:layout_alignStart="@id/bars_container"
        android:layout_alignEnd="@+id/bars_container"
        android:textAlignment="textStart"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"/>

