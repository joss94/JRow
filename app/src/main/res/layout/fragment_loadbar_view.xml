            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/bar4"
            android:layout_alignTop="@+id/center2"
            android:layout_marginBottom="@dimen/margin_very_small"
            android:layout_marginTop="@dimen/margin_very_small" />


        <View
            android:id="@+id/bar4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_toStartOf="@+id/center_bow"
            android:layout_toEndOf="@id/bar4limit"
            android:layout_alignTop="@+id/bar4limit"
            android:layout_alignBottom="@+id/bar4limit"/>


        <View
            android:id="@+id/center_bow"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/bar3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
