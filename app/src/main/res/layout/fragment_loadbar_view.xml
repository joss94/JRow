    <TableLayout
        android:id="@+id/bars_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stroke_rate"
        android:layout_toEndOf="@+id/table"
        android:layout_marginEnd="@dimen/margin_big"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_big"
        android:stretchColumns="0,2">

        <TableRow
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/bar1"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toStartOf="@+id/bow"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />

                <View
                    android:id="@+id/bow"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@color/colorPrimary"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:id="@+id/bar2"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toEndOf="@+id/bow"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />

            </RelativeLayout>


        </TableRow>

        <TableRow
            android:layout_weight="1">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/bar3"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toStartOf="@+id/center_bow"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />


                <View
                    android:id="@+id/center_bow"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@color/colorPrimary"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:id="@+id/bar4"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toEndOf="@+id/center_bow"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />
            </RelativeLayout>


        </TableRow>

        <TableRow
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/bar5"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toStartOf="@+id/center_stern"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />


                <View
                    android:id="@+id/center_stern"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@color/colorPrimary"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:id="@+id/bar6"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toEndOf="@id/center_stern"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />

            </RelativeLayout>


        </TableRow>

        <TableRow
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/bar7"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toStartOf="@+id/stern"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />

                <View
                    android:id="@+id/stern"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_small"
                    android:layout_marginStart="@dimen/margin_small"
                    android:background="@color/colorPrimary"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:id="@+id/bar8"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_toEndOf="@id/stern"
                    android:layout_marginTop="@dimen/margin_small"
                    android:layout_marginBottom="@dimen/margin_small" />

            </RelativeLayout>


        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/bars_container"
        android:layout_alignBottom="@id/bars_container"
        android:layout_marginStart="@dimen/margin_normal"
        android:gravity="center_vertical">

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"/>

            <TextView
                android:text="@string/dummy_delay"/>
        </TableRow>

    </TableLayout>

</RelativeLayout>