    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <View
            android:id="@+id/center1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <View
            android:id="@+id/bar2limit"
            android:layout_width="@dimen/loadbar_tip_width"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignTop="@+id/center1"
            android:layout_marginBottom="@dimen/margin_very_small"
            android:layout_marginTop="@dimen/margin_very_small"
            android:layout_marginStart="60dp"/>

        <View
            android:id="@+id/bar1limit"
            android:layout_width="@dimen/loadbar_tip_width"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/center1"
            android:layout_marginBottom="@dimen/margin_very_small"
            android:layout_marginTop="@dimen/margin_very_small"
            android:layout_marginEnd="80dp"/>

        <View
            android:id="@+id/bar1catch"
            android:elevation="1dp"
            android:layout_width="@dimen/loadbar_max_mark_width"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_toEndOf="@+id/bar1"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/center1"
            android:layout_marginBottom="@dimen/margin_very_small"
            android:layout_marginTop="@dimen/margin_very_small" />

        <View
            android:id="@+id/bar2catch"
            android:elevation="1dp"
            android:layout_width="@dimen/loadbar_max_mark_width"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/bar2"
            android:layout_alignTop="@+id/center1"
            android:layout_marginBottom="@dimen/margin_very_small"
            android:layout_marginTop="@dimen/margin_very_small" />

        <View
            android:id="@+id/bar2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_toStartOf="@+id/bow"
            android:layout_toEndOf="@id/bar2limit"
            android:layout_alignTop="@+id/bar2limit"
            android:layout_alignBottom="@+id/bar2limit"/>

        <View
            android:id="@+id/bow"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:background="@color/colorPrimary"
            android:layout_centerHorizontal="true"/>

        <View
            android:id="@+id/bar1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:layout_toStartOf="@+id/bar1limit"
            android:layout_toEndOf="@+id/bow"
            android:layout_alignTop="@+id/bar1limit"
            android:layout_alignBottom="@+id/bar1limit"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
