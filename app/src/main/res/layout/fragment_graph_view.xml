<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stroke_rate"
        android:layout_alignStart="@+id/table">

        <include
            layout="@layout/training_buttons_layout" />

    </RelativeLayout>


    <TextView
        android:id="@+id/stroke_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/text_very_big"
        android:layout_centerHorizontal="true"
        android:text="@string/strokerate_default"
        android:layout_alignStart="@+id/graph"
        android:layout_alignEnd="@+id/graph"
        android:textAlignment="textEnd"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"/>

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/stroke_rate"
        android:layout_toEndOf="@+id/table"
        android:layout_marginEnd="@dimen/margin_normal"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginBottom="@dimen/margin_normal" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/graph"
        android:layout_alignBottom="@id/graph"
        android:layout_marginStart="@dimen/margin_normal"
        android:gravity="center_vertical">

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"
                android:layout_marginEnd="@dimen/margin_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_delay"
                android:textSize="@dimen/text_small"/>
        </TableRow>

        <TableRow
            android:layout_weight="1"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dummy_rower"
                android:textSize="@dimen/text_small"
                android:layout_marginEnd="@dimen/margin_small"/>

