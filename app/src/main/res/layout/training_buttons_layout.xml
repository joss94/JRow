<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/calibrate_button"
        android:layout_width="@dimen/training_button_size"
        android:layout_height="@dimen/training_button_size"
        android:src="@drawable/ic_calibrate"
        android:layout_marginEnd="@dimen/margin_normal"
        android:scaleType="fitXY"
        android:contentDescription="@string/calibrate" />

    <ImageView
        android:id="@+id/start_and_pause_button"
        android:layout_width="@dimen/training_button_size"
        android:layout_height="@dimen/training_button_size"
        android:src="@drawable/ic_rowing"
        android:layout_marginEnd="@dimen/margin_normal"
        android:scaleType="fitXY"
        android:contentDescription="@string/start_pause" />

    <ImageView
        android:id="@+id/stop_button"
        android:layout_width="@dimen/training_button_size"
        android:layout_height="@dimen/training_button_size"
        android:src="@drawable/ic_action_playback_stop"
        android:scaleType="fitXY" />

</LinearLayout>